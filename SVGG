                    <label>SVG Code</label>
                    <textarea id="new-item-svg" style="height: 150px; font-family: monospace;" placeholder="<svg>...</svg>"></textarea>
                </div>
                <button class="btn-action btn-copy-main" onclick="createNewItem()">‚ú® Create Item</button>
            </div>
        </div>

        <!-- Trash Bin Section -->
        <div id="section-trash-bin" class="hidden content-section">
            <div class="section-title"><h1>Trash Bin</h1></div>
            <div class="item-grid" id="trash-display-grid">
                <!-- Trash items injected here -->
            </div>
        </div>

    </div>

    <div id="toast" class="msg-toast">‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!</div>

    <script>
        // Global State
        let categories = [
            { id: 'cat-consumables', name: 'Consumables', icon: 'üì¶' },
            { id: 'cat-treasures', name: 'Treasures', icon: 'üíé' }
        ];

        let items = [
            { 
                id: 'item-1', 
                catId: 'cat-consumables', 
                name: 'Silvervine Fruit', 
                svg: `<svg width="100" height="120" viewBox="0 0 120 160"><path d="M60,10 L60,25" stroke="#4a7729" stroke-width="4"/><path d="M60,25 Q40,15 35,25" fill="none" stroke="#6aa329" stroke-width="3"/><path d="M60,25 Q80,15 85,25" fill="none" stroke="#6aa329" stroke-width="3"/><path d="M60,25 C75,25 75,45 75,60 C75,80 95,90 95,115 C95,145 75,155 60,155 C45,155 25,145 25,115 C25,90 45,80 45,60 C45,45 45,25 60,25 Z" fill="#8cc63f"/><path d="M60,25 C60,25 70,45 70,60 C70,80 88,90 88,115 C88,138 75,148 60,148 L60,155 C75,155 95,145 95,115 C95,90 75,80 75,60 C75,45 75,25 60,25" fill="#6aa329" opacity="0.6"/></svg>`
            },
            {
                id: 'item-2',
                catId: 'cat-treasures',
                name: 'Purple Crystal HD',
                svg: `<svg width="100" height="120" viewBox="0 0 100 120"><polygon points="50,5 92,30 92,90 50,115 8,90 8,30" fill="#4b3a8a"/><polygon points="50,5 8,30 8,90 50,115 50,60" fill="#6a4eb3"/><polygon points="50,5 92,30 92,90 50,115 50,60" fill="#8464d1"/><polygon points="50,20 80,40 80,80 50,100 20,80 20,40" fill="#a68af0"/><g stroke="#fff" stroke-width="0.5" stroke-opacity="0.3"><line x1="50" y1="5" x2="50" y2="20"/><line x1="8" y1="30" x2="20" y2="40"/><line x1="92" y1="30" x2="80" y2="40"/><line x1="8" y1="90" x2="20" y2="80"/><line x1="92" y1="90" x2="80" y2="80"/><line x1="50" y1="115" x2="50" y2="100"/></g></svg>`
            }
        ];

        let trash = [];
        let currentCatId = 'cat-consumables';

        // --- Init & Render ---

        function init() {
            renderSidebar();
            renderCategorySelect();
            renderItems();
        }

        function renderSidebar() {
            const container = document.getElementById('sidebar-categories');
            container.innerHTML = categories.map(cat => `
                <div class="menu-item ${cat.id === currentCatId ? 'active' : ''}" onclick="selectCategory('${cat.id}', this)">
                    <span>${cat.icon}</span>
                    <span class="label-text">${cat.name}</span>
                </div>
            `).join('');
        }

        function renderCategorySelect() {
            const select = document.getElementById('new-item-category');
            select.innerHTML = categories.map(cat => `
                <option value="${cat.id}">${cat.name}</option>
            `).join('');
        }

        function selectCategory(id, el) {
            currentCatId = id;
            showSection('category-view', el);
            const cat = categories.find(c => c.id === id);
            document.getElementById('view-title').innerText = `${cat.icon} ${cat.name}`;
            renderItems();
        }

        function showSection(name, menuItem) {
            document.querySelectorAll('.content-section').forEach(s => s.classList.add('hidden'));
            document.getElementById(`section-${name}`).classList.remove('hidden');
            
            if (menuItem) {
                document.querySelectorAll('.menu-item').forEach(i => i.classList.remove('active'));
                menuItem.classList.add('active');
            }

            if(name === 'trash-bin') renderTrash();
        }

        // --- Data Management ---

        function renderItems() {
            const grid = document.getElementById('items-display-grid');
            const filteredItems = items.filter(i => i.catId === currentCatId);
            
            if (filteredItems.length === 0) {
                grid.innerHTML = `<div style="grid-column: 1/-1; text-align: center; opacity: 0.3; padding: 40px;">No items in this category yet.</div>`;
                return;
            }

            grid.innerHTML = filteredItems.map(item => `
                <div class="item-card" id="card-${item.id}">
                    <h3>${item.name}</h3>
                    <div class="svg-display" id="svg-cont-${item.id}">${item.svg}</div>
                    <div class="btn-row">
                        <button class="btn-action btn-copy-main" onclick="copySVG('${item.id}')">Copy</button>
                        <button class="btn-action btn-flip" onclick="flipItem('${item.id}')" title="Flip Image">‚ÜîÔ∏è</button>
                        <button class="btn-action btn-delete" onclick="moveToTrash('${item.id}')" title="Delete">üóëÔ∏è</button>
                    </div>
                </div>
            `).join('');
        }

        function renderTrash() {
            const grid = document.getElementById('trash-display-grid');
            if (trash.length === 0) {
                grid.innerHTML = `<div style="grid-column: 1/-1; text-align: center; opacity: 0.3; padding: 40px;">Trash is empty.</div>`;
                return;
            }

            grid.innerHTML = trash.map(item => `
                <div class="item-card">
                    <h3>${item.name}</h3>
                    <div class="svg-display">${item.svg}</div>
                    <div class="btn-row">
                        <button class="btn-action btn-restore" onclick="restoreFromTrash('${item.id}')">Restore</button>
                        <button class="btn-action btn-permanent" onclick="permanentDelete('${item.id}')">Delete Forever</button>
                    </div>
                </div>
            `).join('');
        }

        function createNewItem() {
            const name = document.getElementById('new-item-name').value;
            const catId = document.getElementById('new-item-category').value;
            const svg = document.getElementById('new-item-svg').value;

            if(!name || !svg) { toast("‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö!"); return; }

            const newItem = { id: 'item-' + Date.now(), catId, name, svg };
            items.push(newItem);
            
            document.getElementById('new-item-name').value = '';
            document.getElementById('new-item-svg').value = '';
            toast("‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÑ‡∏≠‡πÄ‡∏ó‡∏°‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!");
            
            const menuItems = document.querySelectorAll('.menu-item');
            menuItems.forEach(mi => {
                if(mi.onclick.toString().includes(catId)) selectCategory(catId, mi);
            });
        }

        function moveToTrash(id) {
            const index = items.findIndex(i => i.id === id);
            const item = items.splice(index, 1)[0];
            trash.push(item);
            renderItems();
            toast("‡∏¢‡πâ‡∏≤‡∏¢‡∏•‡∏á‡∏ñ‡∏±‡∏á‡∏Ç‡∏¢‡∏∞‡πÅ‡∏•‡πâ‡∏ß");
        }

        function restoreFromTrash(id) {
            const index = trash.findIndex(i => i.id === id);
            const item = trash.splice(index, 1)[0];
            items.push(item);
            renderTrash();
            toast("‡∏Å‡∏π‡πâ‡∏Ñ‡∏∑‡∏ô‡πÑ‡∏≠‡πÄ‡∏ó‡∏°‡πÅ‡∏•‡πâ‡∏ß");
        }

        function permanentDelete(id) {
            const index = trash.findIndex(i => i.id === id);
            trash.splice(index, 1);
            renderTrash();
            toast("‡∏•‡∏ö‡∏ñ‡∏≤‡∏ß‡∏£‡πÅ‡∏•‡πâ‡∏ß");
        }

        function flipItem(id) {
            const container = document.getElementById(`svg-cont-${id}`);
            container.classList.toggle('flipped');
        }

        function copySVG(id) {
            const svg = document.getElementById(`svg-cont-${id}`).innerHTML;
            copyToClipboard(svg.trim());
            toast("‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å SVG ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!");
        }

        // --- Backup & Restore ---

        function backupAll() {
            const data = {
                categories: categories,
                items: items
            };
            const jsonString = JSON.stringify(data);
            copyToClipboard(jsonString);
            toast("‡∏™‡∏≥‡∏£‡∏≠‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏• (JSON) ‡∏•‡∏á Clipboard ‡πÅ‡∏•‡πâ‡∏ß!");
        }

        function processRestore() {
            const input = document.getElementById('restore-input').value;
            if(!input) return;

            try {
                const data = JSON.parse(input);
                if(data.categories && data.items) {
                    categories = data.categories;
                    items = data.items;
                    trash = []; // Reset trash on restore
                    
                    if(categories.length > 0) currentCatId = categories[0].id;
                    
                    init();
                    closeModal('modal-restore');
                    document.getElementById('restore-input').value = '';
                    toast("‡∏Ñ‡∏∑‡∏ô‡∏Ñ‡πà‡∏≤‡∏£‡∏∞‡∏ö‡∏ö‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!");
                } else {
                    throw new Error("Invalid Format");
                }
            } catch (e) {
                toast("‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á!");
            }
        }

        // --- Utils ---

        function copyToClipboard(text) {
            const el = document.createElement('textarea');
            el.value = text;
            document.body.appendChild(el);
            el.select();
            document.execCommand('copy');
            document.body.removeChild(el);
        }

        function openModal(id) { document.getElementById(id).style.display = 'flex'; }
        function closeModal(id) { document.getElementById(id).style.display = 'none'; }

        function saveCategory() {
            const name = document.getElementById('cat-name-input').value;
            const icon = document.getElementById('cat-icon-input').value || 'üìÅ';
            if(!name) return;

            const newId = 'cat-' + Date.now();
            categories.push({ id: newId, name, icon });
            
            init(); 
            closeModal('modal-category');
            document.getElementById('cat-name-input').value = '';
            document.getElementById('cat-icon-input').value = '';
            toast("‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà‡πÉ‡∏´‡∏°‡πà‡πÅ‡∏•‡πâ‡∏ß!");
        }

        function toast(msg) {
            const t = document.getElementById('toast');
            t.innerText = msg;
            t.classList.add('show');
            setTimeout(() => t.classList.remove('show'), 2000);
        }

        window.onload = init;
    </script>
</body>
</html>
